@model CradleOfFilth.Models.Course
@{
    Layout = "_Layout";
 }
<h2>Create a Course</h2>
<div class="container">
    <form method="post" asp-action="Create">
        <div class="form-group">
            <label asp-for="@Model.CourseName" class="control-label">Name</label>
            <input asp-for="@Model.CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description" class="control-label">Description</label>
            <input asp-for="@Model.Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List of Courses</a>
</div>